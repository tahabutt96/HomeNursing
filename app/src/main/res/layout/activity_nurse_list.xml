<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".nurse_avilibility.nurse_list">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        android:background="@android:color/white"
        android:gravity="top|right">

        <EditText
            android:padding="5dp"
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Search nurse by name"
            android:drawableEnd="@drawable/search"
            android:gravity="start" >
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:padding="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="160dp">
            <ImageView
                android:src="@drawable/nurse"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingTop="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anusha"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Years Working Experience"
                    android:textAlignment="center"
                    android:textSize="20dp">
                </TextView>

                <Button
                    android:id="@+id/nurehired1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hire Me"
                    android:textSize="20dp"
                    android:enabled="true"
                    android:textAllCaps="false">
                </Button>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="160dp">
            <ImageView
                android:src="@drawable/nurse2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingTop="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ruksana"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 Years Working Experience"
                    android:textAlignment="center"
                    android:textSize="20dp">
                </TextView>

                <Button
                    android:id="@+id/nurehired2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hire Me"
                    android:textSize="20dp"
                    android:enabled="true"
                    android:textAllCaps="false">
                </Button>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="160dp">
            <ImageView
                android:src="@drawable/nurse1"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingTop="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Farzana"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Years Working Experience"
                    android:textAlignment="center"
                    android:textSize="20dp">
                </TextView>

                <Button
                    android:id="@+id/nurehired3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hire Me"
                    android:textSize="20dp"
                    android:enabled="true"
                    android:textAllCaps="false">
                </Button>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>